{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "types": ["node"]
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "generated/prisma/**/*.ts"]
}
