{
  "name": "finanzas-monorepo",
  "private": true,
  "engines": {
    "node": ">=25.3.0",
    "pnpm": ">=10.28.0"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "argon2",
      "core-js",
      "esbuild",
      "husky",
      "lmdb",
      "protobufjs",
      "sharp"
    ]
  },
  "scripts": {
    "dev": "pnpm -r --if-present dev",
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "clean": "pnpm -r --if-present clean",
    "type-check": "pnpm -r --if-present type-check",
    "validate:permissions": "tsx scripts/validate-permissions.ts",
    "devtools": "turbo devtools"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@zenstackhq/tanstack-query": "^3.2.1",
    "turbo": "^2.7.6"
  },
  "dependencies": {
    "isomorphic-dompurify": "^2.35.0",
    "superjson": "^2.2.6"
  }
}
