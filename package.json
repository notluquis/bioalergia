{
  "name": "finanzas-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=25.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "hono": "^4.10.3",
    "valibot": "^1.1.1"
  },
  "scripts": {
    "dev": "npm run dev:full",
    "dev:client": "vite",
    "build": "tsc && vite build",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "server": "npx @dotenvx/dotenvx run -- tsx watch --tsconfig tsconfig.server.json server/index.ts",
    "predev:full": "lsof -ti:4000,5173,5174 | xargs kill -9 || true",
    "dev:full": "concurrently \"npm run dev:client\" \"npm run server\"",
    "start": "node dist/server/index.js",
    "prisma:generate": "prisma generate",
    "postinstall": "prisma generate",
    "build:prod": "rm -rf dist && concurrently --kill-others-on-fail \"npm run build:server\" \"npm run build:client\"",
    "deploy": "npm run build:prod && npm prune --omit=dev",
    "prod": "npm run build:prod && npm start",
    "env:encrypt": "npx @dotenvx/dotenvx encrypt",
    "env:decrypt": "npx @dotenvx/dotenvx decrypt",
    "prod:secure": "npx @dotenvx/dotenvx run -- npm start",
    "security:check": "npm audit && npx @dotenvx/dotenvx run --quiet -- echo 'âœ… Variables de entorno cargadas de forma segura'",
    "test:employees": "node test/employees.integration.test.ts",
    "db:deploy": "prisma migrate deploy",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.server.json",
    "test": "vitest",
    "ci:check": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@casl/ability": "^6.7.5",
    "@casl/prisma": "^1.6.0",
    "@casl/react": "^5.0.0",
    "@fullcalendar/core": "^6.1.20",
    "@fullcalendar/daygrid": "^6.1.20",
    "@fullcalendar/interaction": "^6.1.20",
    "@fullcalendar/react": "^6.1.20",
    "@fullcalendar/timegrid": "^6.1.20",
    "@googleapis/calendar": "^14.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@tanstack/react-query": "^5.90.12",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "i18next": "^25.7.3",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "otplib": "^12.0.1",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "react-i18next": "^16.5.0",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.6.0",
    "sharp": "^0.34.5",
    "use-debounce": "^10.0.6",
    "web-push": "^3.6.7",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/papaparse": "^5.5.2",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "concurrently": "^9.2.1",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "lucide-react": "^0.562.0",
    "pino-pretty": "^13.1.3",
    "postcss-preset-env": "^10.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-checker": "^0.12.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
