{
  "name": "finanzas-monorepo",
  "private": true,
  "engines": {
    "node": ">=25.3.0",
    "pnpm": ">=10.28.0"
  },
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "pnpm -r --if-present dev",
    "mail:start": "node scripts/mail-agent.mjs start",
    "mail:status": "node scripts/mail-agent.mjs status",
    "mail:stop": "node scripts/mail-agent.mjs stop",
    "mail:logs": "node scripts/mail-agent.mjs logs",
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "clean": "pnpm -r --if-present clean",
    "type-check": "pnpm -r --if-present type-check",
    "devtools": "turbo devtools",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.3"
  },
  "dependencies": {
    "isomorphic-dompurify": "^2.35.0",
    "superjson": "^2.2.6"
  }
}
