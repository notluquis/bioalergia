{
  "name": "finanzas-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "overrides": {
    "hono": "^4.10.3"
  },
  "scripts": {
    "dev": "npm run dev:full",
    "dev:client": "vite",
    "build": "tsc && vite build",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "server": "npx @dotenvx/dotenvx run -- tsx watch --tsconfig tsconfig.server.json server/index.ts",
    "predev:full": "node scripts/reset-dev.mjs",
    "dev:full": "concurrently \"npm run dev:client\" \"npm run server\"",
    "start": "npm run db:deploy && node dist/server/index.js",
    "prisma:generate": "prisma generate && node scripts/fix-prisma-esm.mjs",
    "postinstall": "npm run prisma:generate",
    "build:prod": "rm -rf dist && concurrently --kill-others-on-fail \"npm run build:server\" \"npm run build:client\" \"npm run copy:generated\"",
    "copy:generated": "mkdir -p dist/generated && cp -R generated/prisma dist/generated/prisma",
    "deploy": "npm run build:prod && npm prune --omit=dev",
    "prod": "npm run build:prod && npm start",
    "env:encrypt": "npx @dotenvx/dotenvx encrypt",
    "env:decrypt": "npx @dotenvx/dotenvx decrypt",
    "prod:secure": "npx @dotenvx/dotenvx run -- npm start",
    "security:check": "npm audit && npx @dotenvx/dotenvx run --quiet -- echo 'âœ… Variables de entorno cargadas de forma segura'",
    "test:employees": "node test/employees.integration.test.ts",
    "db:deploy": "prisma migrate deploy",
    "migrate:timesheets": "npx @dotenvx/dotenvx run -- node scripts/migrate-timesheets.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "ci:check": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "node scripts/prepare-husky.js"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@googleapis/calendar": "^14.0.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@tanstack/react-query": "^5.90.10",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.5.0",
    "i18next": "^25.6.0",
    "imask": "^7.6.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "otplib": "^12.0.1",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "qrcode": "^1.5.4",
    "qs": "^6.14.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "react-i18next": "^16.2.3",
    "react-imask": "^7.6.1",
    "react-router-dom": "^7.9.3",
    "sharp": "^0.34.4",
    "use-debounce": "^10.0.6",
    "web-push": "^3.6.7",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.0",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.0",
    "@types/supertest": "^6.0.3",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^9.2.1",
    "daisyui": "^5.4.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "html2canvas": "^1.4.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.2",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "prisma": "^7.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^4.0.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
