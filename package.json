{
  "name": "finanzas-monorepo",
  "private": true,
  "engines": {
    "node": ">=25.3.0",
    "pnpm": ">=10.28.0"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "scripts": {
    "dev": "pnpm -r --if-present dev",
    "mail:start": "node scripts/mail-agent.mjs start",
    "mail:status": "node scripts/mail-agent.mjs status",
    "mail:stop": "node scripts/mail-agent.mjs stop",
    "mail:logs": "node scripts/mail-agent.mjs logs",
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "biome lint .",
    "lint:ci": "biome ci . --reporter=default --reporter=github",
    "lint:ci:sarif": "biome ci . --reporter=sarif --reporter-file=./reports/biome.sarif",
    "lint:profile": "biome check . --profile-rules",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "ci:check": "biome ci . --reporter=default --reporter=github",
    "clean": "pnpm -r --if-present clean",
    "type-check": "pnpm -r --if-present type-check",
    "devtools": "turbo devtools",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.10"
  },
  "dependencies": {
    "isomorphic-dompurify": "3.0.0-rc.2",
    "papaparse": "^5.5.3",
    "superjson": "^2.2.6"
  }
}
