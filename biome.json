{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/dist", "!**/.turbo", "!**/node_modules", "!**/*.css"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noInnerDeclarations": "off",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "recommended": true,
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "recommended": true,
        "useBlockStatements": "off",
        "useSelfClosingElements": "off",
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "recommended": true
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
