{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/dist",
      "!**/.turbo",
      "!**/node_modules",
      "!**/public/mockServiceWorker.js",
      "!**/*.css",
      "!**/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "recommended": true,
        "noAccumulatingSpread": "warn",
        "noAwaitInLoops": "warn",
        "noBarrelFile": "error",
        "noDelete": "error",
        "noDynamicNamespaceImportAccess": "warn",
        "noImgElement": "warn",
        "noNamespaceImport": "error",
        "noReExportAll": "error",
        "noUnwantedPolyfillio": "warn",
        "useGoogleFontPreconnect": "warn",
        "useSolidForComponent": "warn",
        "useTopLevelRegex": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.stories.*"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.d.ts",
        "**/vite.config.*",
        "**/vitest.config.*",
        "**/lint-staged.config.*",
        "**/.storybook/**/*"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/db/src/zenstack/schema.ts"],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/db/src/zenstack/schema-lite.ts"],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/api/src/config.ts",
        "apps/api/src/lib/mercadopago/mercadopago-scheduler.ts"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/intranet/src/features/finance/mercadopago/components/SettlementReleaseColumns.tsx"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/db/src/client.ts", "packages/db/src/input.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off",
            "noReExportAll": "off"
          }
        }
      }
    }
  ],
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
