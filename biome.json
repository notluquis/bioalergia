{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/dist",
      "!**/.turbo",
      "!**/node_modules",
      "!**/public/mockServiceWorker.js",
      "!**/*.css",
      "!**/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "recommended": true,
        "noExcessiveCognitiveComplexity": "warn",
        "noExcessiveLinesPerFunction": {
          "level": "warn",
          "options": {
            "maxLines": 200
          }
        },
        "noExcessiveNestedTestSuites": "warn",
        "noImplicitCoercions": "error",
        "noUselessCatch": "error",
        "noUselessConstructor": "error",
        "noUselessEmptyExport": "error",
        "noUselessFragments": "error",
        "noUselessLabel": "error",
        "noUselessRename": "error",
        "noUselessStringConcat": "error",
        "noUselessTernary": "error",
        "noUselessThisAlias": "error",
        "noUselessTypeConstraint": "error",
        "useArrowFunction": "warn",
        "useFlatMap": "warn"
      },
      "correctness": {
        "recommended": true,
        "noInnerDeclarations": "warn",
        "useExhaustiveDependencies": "warn",
        "noUndeclaredDependencies": "error",
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noUnusedFunctionParameters": "warn",
        "noUnusedPrivateClassMembers": "warn",
        "useHookAtTopLevel": "error"
      },
      "suspicious": {
        "recommended": true,
        "noAssignInExpressions": "off",
        "noExplicitAny": "error",
        "noArrayIndexKey": "warn",
        "noConsole": "off",
        "noVar": "error",
        "noApproximativeNumericConstant": "warn",
        "noConfusingVoidType": "warn",
        "noDoubleEquals": "warn",
        "noDuplicateJsxProps": "error",
        "noEmptyBlockStatements": "warn",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error"
      },
      "style": {
        "recommended": true,
        "noDefaultExport": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "@/components/ui/Card": "Importa Card desde @heroui/react y usa Card.Header/Card.Content/Card.Title/Card.Description."
            }
          }
        },
        "useBlockStatements": "warn",
        "useSelfClosingElements": "warn",
        "noNonNullAssertion": "warn",
        "useImportType": "error",
        "useExportType": "error",
        "useConsistentArrayType": "warn",
        "useEnumInitializers": "warn",
        "useFilenamingConvention": "off",
        "useForOf": "warn",
        "useFragmentSyntax": "warn",
        "useNamingConvention": "off",
        "useNodejsImportProtocol": "warn",
        "useNumberNamespace": "warn",
        "useShorthandAssign": "warn",
        "useSingleVarDeclarator": "warn"
      },
      "performance": {
        "recommended": true,
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "error",
        "noDelete": "error",
        "noNamespaceImport": "error",
        "noReExportAll": "error",
        "useTopLevelRegex": "warn"
      },
      "security": {
        "recommended": true,
        "noDangerouslySetInnerHtml": "warn",
        "noGlobalEval": "error",
        "noSecrets": "error"
      },
      "a11y": {
        "recommended": true,
        "noSvgWithoutTitle": "warn",
        "noLabelWithoutControl": "warn",
        "useSemanticElements": "warn",
        "useFocusableInteractive": "warn",
        "useAriaPropsSupportedByRole": "warn",
        "useAriaPropsForRole": "warn",
        "useValidAriaValues": "error",
        "useValidAriaRole": "error"
      },
      "nursery": {
        "recommended": true,
        "useSortedClasses": "warn",
        "noFloatingPromises": "warn",
        "noImportCycles": "warn",
        "noUnresolvedImports": "off",
        "noUnnecessaryConditions": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.stories.*"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.d.ts",
        "**/vite.config.*",
        "**/vitest.config.*",
        "**/lint-staged.config.*",
        "**/.storybook/**/*"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/db/src/zenstack/schema.ts"],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/db/src/zenstack/schema-lite.ts"],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/api/src/config.ts",
        "apps/api/src/lib/mercadopago/mercadopago-scheduler.ts"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/intranet/src/features/finance/mercadopago/components/SettlementReleaseColumns.tsx"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/db/src/client.ts", "packages/db/src/input.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off",
            "noReExportAll": "off"
          }
        }
      }
    }
  ],
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
