  "categories": ["finance", "business", "productivity"],
  "shortcuts": [
    {
      "name": "Calendario",
      "short_name": "Calendar",
      "description": "Ver eventos y agenda",
      "url": "/calendar",
      "icons": [{ "src": "/icons/icon-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Servicios",
      "short_name": "Services",
      "description": "Gestionar servicios recurrentes",
      "url": "/services",
      "icons": [{ "src": "/icons/icon-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Transacciones",
      "short_name": "Money",
      "description": "Ver movimientos financieros",
      "url": "/finance",
      "icons": [{ "src": "/icons/icon-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Empleados",
      "short_name": "Team",
      "description": "Gestión de recursos humanos",
      "url": "/hr/employees",
      "icons": [{ "src": "/icons/icon-96.png", "sizes": "96x96" }]
    }
  ],
  "display_override": ["window-controls-overlay", "standalone"],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/finanzas/movements",
      "accept": {
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"],
        "image/webp": [".webp"],
        "application/pdf": [".pdf"]
      },
      "icons": [
        {
          "src": "/icons/icon-512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+bioalergia",
      "url": "/?start_url=%s"
    }
  ],
  "screenshots": [],
  "related_applications": [],
  "prefer_related_applications": false
