model DTEPeriod {
  id             String    @id @default(uuid())
  period         String    @unique @db.VarChar(6) // Format: YYYYMM (e.g., "202311")
  year           Int
  month          Int
  type           DTEType                 // PURCHASE or SALE
  purchaseCount  Int       @default(0) @map("purchase_count")
  saleCount      Int       @default(0) @map("sale_count")
  totalPurchases Decimal   @default(0) @map("total_purchases") @db.Decimal(18, 2)
  totalSales     Decimal   @default(0) @map("total_sales") @db.Decimal(18, 2)
  importedAt     DateTime? @map("imported_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @default(now()) @updatedAt @map("updated_at")

